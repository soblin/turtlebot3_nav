<launch>
  <arg name="output" default="log"/>
  <arg name="robot_namespace" default="burger1"/>

  <arg name="model" default="burger"/>
  <arg name="x_pos" default="-3.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/>

  <group ns="$(arg robot_namespace)">
	<!-- Model -->
	<param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_custom_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />
	<node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model turtlebot3 -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description"/>  
	<node name="robot_state_publisher" type="robot_state_publisher" pkg="robot_state_publisher">
	  <param name="tf_prefix" value="$(arg robot_namespace)"/>
	</node>
  </group>

</launch>
