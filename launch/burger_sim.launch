<launch>
  <arg name="gui" default="true"/>
  <arg name="slam_method" default="cartographer"/>

  <include file="$(find turtlebot3_nav)/launch/bringup_world.launch">
	<arg name="gui" value="$(arg gui)"/>
  </include>

  <include file="$(find turtlebot3_nav)/launch/bringup_burger.launch">
	<arg name="slam_method" value="$(arg slam_method)"/>
  </include>

  <node name="rviz" type="rviz" pkg="rviz" args="-d $(find turtlebot3_nav)/config/burger_sim.rviz"/>
</launch>
