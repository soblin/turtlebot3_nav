<launch>
  <arg name="robot_namespace" default="burger1"/>

  <arg name="model" default="burger"/>
  <arg name="x_pos" default="-3.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/>

  <arg name="slam_method" default="gmapping" doc="slam type [gmapping, cartographer]"/>
  <arg name="configuration_basename" default="turtlebot3_lds_2d.lua"/>

  <arg name="cmd_vel_topic" default="cmd_vel"/>
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="false"/>

  <group ns="$(arg robot_namespace)">
	<!-- Model -->
	<param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />
	<node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model turtlebot3 -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description"/>  
	<node name="robot_state_publisher" type="robot_state_publisher" pkg="robot_state_publisher">
	  <param name="tf_prefix" value="$(arg robot_namespace)"/>
	</node>

	<!-- SLAM -->
	<include file="$(find turtlebot3_nav)/launch/slam_$(arg slam_method).launch">
	  <arg name="robot_namespace" value="$(arg robot_namespace)"/>
	  <arg name="configuration_basename" default="$(arg configuration_basename)"/>
	</include>

  </group>
</launch>
