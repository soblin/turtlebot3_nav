<launch>
  <arg name="model" default="burger" doc="model [burger, waffle, waffle_pi]"/>
  <arg name="robot_namespace" default="burger1"/>
  <arg name="slam_method" default="cartographer" doc="slam type [cartographer]"/>
  <arg name="configuration_basename" default="turtlebot3_lds_2d.lua"/>

  <arg name="x_pos" default="-3.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/>

  <arg name="gui" default="true"/>
  <arg name="output" default="log"/>

  <!-- robot -->
  <include file="$(find-pkt-share turtlebot3_multi_nav)/launch/bringup_robot.launch">
	<var name="model" value="$(var model)"/>
	<var name="robot_namespace" value="$(var robot_namespace)"/>
	<var name="x_pos" value="$(var x_pos)"/>
	<var name="y_pos" value="$(var y_pos)"/>
	<var name="z_pos" value="$(var z_pos)"/>
	<var name="output" value="$(var output)"/>
  </include>

  <!-- SLAM -->
  <include file="$(find-pkg-share turtlebot3_multi_nav)/launch/slam_$(var slam_method).launch">
	<var name="robot_namespace" value="$(var robot_namespace)"/>
	<var name="configuration_basename" default="$(var configuration_basename)"/>
	<var name="output" value="$(var output)"/>
  </include>

  <node name="rviz" type="rviz" pkg="rviz" vars="-d $(find-pkg-share turtlebot3_multi_nav)/config/sim.rviz" ns="$(var robot_namespace)"/>
</launch>
